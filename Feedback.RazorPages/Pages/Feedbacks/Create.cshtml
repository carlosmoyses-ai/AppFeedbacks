@page
@model Feedback.RazorPages.Pages.Feedbacks.CreateModel
@{
    ViewData["Title"] = "Create";
}
<form method="post" class="form">
    <div class="form-group">
        <h1>Criar Feedback</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Feedback.IdFeedback" />
        <div class="form-group">
            <label asp-for="Feedback.NomeCliente" class="form-label">Nome Cliente</label>
            <input asp-for="Feedback.NomeCliente" class="form-control nome email" />
            <span asp-validation-for="Feedback.NomeCliente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Feedback.EmailCliente" class="form-label">Email</label>
            <input asp-for="Feedback.EmailCliente" type="email" class="form-control" />
            <span asp-validation-for="Feedback.EmailCliente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Feedback.DataFeedback" class="form-label">Data</label>
            <input asp-for="Feedback.DataFeedback" type="date" class="form-control" />
            <span asp-validation-for="Feedback.DataFeedback" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Feedback.Comentario" class="form-label"></label><br>
            <textarea asp-for="Feedback.Comentario" class="form-textarea"></textarea>
            <span asp-validation-for="Feedback.Comentario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Feedback.Avaliacao" class="form-label"></label><br>
            <ul class="rate-area">
                @Html.RadioButtonFor(model => model.Feedback.Avaliacao,"5", new { id="5-star", name="rating", @class ="rate-area" })
                <label for="5-star" title="Muito satisfeito">5</label>
                @Html.RadioButtonFor(model => model.Feedback.Avaliacao,"4", new { id="4-star", name="rating", @class ="rate-area" })
                <label for="4-star" title="Satisfeito">4</label>
                @Html.RadioButtonFor(model => model.Feedback.Avaliacao,"3", new { id="3-star", name="rating", @class ="rate-area" })
                <label for="3-star" title="Imparcial">3</label>
                @Html.RadioButtonFor(model => model.Feedback.Avaliacao,"2", new { id="2-star", name="rating", @class ="rate-area" })
                <label for="2-star" title="Insatisfeito">2</label>
                @Html.RadioButtonFor(model => model.Feedback.Avaliacao,"1", new { id="1-star", name="rating", @class ="rate-area" })
                <label for="1-star" title="Muito Insatisfeito">1</label>
                <span asp-validation-for="Feedback.Avaliacao" class="text-danger"></span>
            </ul>
        </div>
        <div class="form-group botao">
            <input type="submit" class="btn btn-primary" value="Salvar" />
            <a asp-page="/Feedbacks/View" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>